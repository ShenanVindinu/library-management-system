<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #212A3E;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.LoginFormController">
   <children>
      <ImageView fitHeight="439.0" fitWidth="443.0" layoutX="178.0">
         <image>
            <Image url="@../asset/logo.png" />
         </image>
      </ImageView>
      <TextField fx:id="userNameField" focusTraversable="false" layoutX="263.0" layoutY="335.0" prefHeight="37.0" prefWidth="274.0" promptText="Enetr your username">
         <font>
            <Font name="Josefin Sans Regular" size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="passwordFiled" focusTraversable="false" layoutX="262.0" layoutY="402.0" prefHeight="31.0" prefWidth="274.0" promptText="Password">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <Button fx:id="loginButton" layoutX="321.0" layoutY="465.0" mnemonicParsing="false" onAction="#login" prefHeight="35.0" prefWidth="158.0" style="-fx-background-color: #B5CB6E;" text="Login" textAlignment="CENTER">
         <font>
            <Font name="Josefin Sans Regular" size="18.0" />
         </font>
      </Button>
      <Text fill="WHITE" layoutX="389.0" layoutY="538.0" smooth="false" strokeType="OUTSIDE" strokeWidth="0.0" text="Or" textAlignment="CENTER">
         <font>
            <Font name="Josefin Sans Regular" size="16.0" />
         </font>
      </Text>
      <Text fx:id="signupButton" fill="#b5cb6e" layoutX="362.0" layoutY="573.0" onMouseClicked="#signup" smooth="false" strokeType="OUTSIDE" strokeWidth="0.0" text="Signup" textAlignment="CENTER" underline="true">
         <font>
            <Font name="Josefin Sans Regular" size="24.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
